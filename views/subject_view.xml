<odoo>
    <!-- Form view -->
  <record id="subject_form_view" model="ir.ui.view">
    <field name="name">Subject Form View</field>
    <field name="model">bytebuddies.subject</field>
    <field name="arch" type="xml">
        <form string="Subject Form">
             <header>
                       <field name="state_subject" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}"/>
                </header>
            <sheet>
               <field name="image" widget="image" class="oe_avatar" nolabel="1"></field>
                    <div class="oe-tittle">
                        <label for="name"/>
                        <h1>
                            <field name="name" required="1" placeholder="e.g. Virus"></field>
                        </h1>
                          <div style="height: 10px;"></div>
                    </div>
                <group>
                    <group>
                        <separator string="Subject Details"/>
                        <field name="hours"/>
                        <field name="levelType" widget="radio"/>
                        <field name="languageType" widget="radio"/>
                    </group>
                    <group>
                        <separator string="Subject dates"/>
                        <field name="dateInit" widget="date"/>
                        <field name="dateEnd" widget="date"/>
                        <field name="date_inactive"/>
                    </group>
                </group>
                <group>
                    <separator string="Additional Information"/>
                    <field name="exams"/>
                    <field name="teachers"/>
                    <field name="students"/>
                </group>
            </sheet>
        </form>
    </field>
</record>


<record id="subject_tree_view" model="ir.ui.view">
    <field name="name">Subject Tree View</field>
    <field name="model">bytebuddies.subject</field>
    <field name="arch" type="xml">
        <tree decoration-success="state_subject == 'ACTIVE'"
              decoration-muted="state_subject == 'INACTIVE'">
            <field name="name"/>
            <field name="hours"/>
            <field name="levelType"/>
            <field name="languageType"/>
            <field name="dateInit" widget="date"/>
            <field name="dateEnd" widget="date"/>
            <field name="teachers"/>
            <field name="students"/>
            <field name="exams"/>
            <field name="state_subject" readonly="1" class="oe_kanban_global_click" widget="badge"/>
        </tree>
    </field>
</record>


   <record id="subject_kanban_view" model="ir.ui.view">
    <field name="name">Subject Kanban View</field>
    <field name="model">bytebuddies.subject</field>
    <field name="arch" type="xml">
        <kanban>
            <field name="id"/>
            <field name="name"/>
            <field name="image" invisible="1"/>
            <templates>
                <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_global_click">
                        <div class="o_kanban_image">
                            <img t-att-src="kanban_image('bytebuddies.subject', 'image', record.id.raw_value)" alt="imagen libro"/>
                        </div>
                        <div class="oe_kanban_details">
                            <strong class="o_kanban_record_title">
                                <field name="name"/>
                            </strong>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>


   <record id="subject_search_view" model="ir.ui.view">
    <field name="name">Subject Search View</field>
    <field name="model">bytebuddies.subject</field>
    <field name="priority" eval="16"/>
    <field name="arch" type="xml">
        <search string="BÃºsqueda de asignaturas">
            <filter name="filter_active" string="Activo" domain="[('state_subject', '=', 'ACTIVE')]"/>
            <filter name="filter_inactive" string="Inactivo" domain="[('state_subject', '=', 'INACTIVE')]"/>
        </search>
    </field>
</record>

</odoo>
